// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id       Int    @id @default(autoincrement())
  username String @unique
}

model TechStackItem {
  id        Int                       @id @default(autoincrement())
  code      String                    @unique
  techStack ProjectsOnTechStackItem[]
}

model Project {
  id             Int                       @id @default(autoincrement())
  title          String
  description    String
  projects       ProjectsOnTechStackItem[]
  tools          ProjectsOnTools[]
  purposeAndGoal String?
  testimonial    String?
  githubURL      String?
  demoURL        String?
}

model Tool {
  id       Int               @id @default(autoincrement())
  code     String            @unique
  projects ProjectsOnTools[]
}

model ProjectsOnTools {
  project   Project @relation(fields: [projectId], references: [id])
  projectId Int
  tool      Tool    @relation(fields: [toolId], references: [id])
  toolId    Int

  @@id([projectId, toolId])
}

model ProjectsOnTechStackItem {
  project         Project       @relation(fields: [projectId], references: [id])
  projectId       Int
  techStackItem   TechStackItem @relation(fields: [techStackItemId], references: [id])
  techStackItemId Int

  @@id([projectId, techStackItemId])
}
