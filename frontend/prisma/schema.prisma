// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  // binaryTargets = ["linux-musl-openssl-3.0.x", "windows"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  username String   @unique
  profile  Profile?
}

model Profile {
  id           Int     @id @default(autoincrement())
  user         User    @relation(fields: [userId], references: [id])
  userId       Int     @unique
  githubURL    String?
  linkedinURL  String?
  instagramURL String?
}

model TechStackItem {
  id        Int                       @id @default(autoincrement())
  value     String                    @unique
  label     String
  type      techStackType
  techStack ProjectsOnTechStackItem[]
}

model Project {
  id             Int                       @id @default(autoincrement())
  title          String
  description    String?
  projects       ProjectsOnTechStackItem[]
  purposeAndGoal String?
  testimonial    String?
  githubURL      String?
  demoURL        String?
}

model ProjectsOnTechStackItem {
  id              Int           @id @default(autoincrement())
  project         Project       @relation(fields: [projectId], references: [id])
  projectId       Int
  techStackItem   TechStackItem @relation(fields: [techStackItemId], references: [id])
  techStackItemId Int

  // @@id([projectId, techStackItemId])
}

enum techStackType {
  TECHSTACK
  TOOL
}
